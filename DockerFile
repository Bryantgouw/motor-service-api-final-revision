# Gunakan base image Python versi 3.12
FROM python:3.12

# Nonaktifkan bytecode dan buffer output Python
ENV PYTHONDONTWRITEBYTECODE=1  
ENV PYTHONUNBUFFERED=1         

# Update sistem dan install git
RUN apt-get update && apt-get install -y git

# Tentukan working directory dalam container
WORKDIR /app

# Clone repository dari GitHub
RUN git clone https://github.com/Bryantgouw/motor-service-api-final-revision.git

# Masuk ke direktori project setelah clone
WORKDIR /app/motor-service-api-final-revision

# Install dependencies dari requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Ekspos port aplikasi
EXPOSE 8033

# Set perintah default untuk menjalankan aplikasi
CMD ["uvicorn", "service:app", "--host", "--port", "8033"]
